<h1 align="center">Log in</h1>
<!-- This is not a model back form. We creating a session and getting rid of the session and all that info is going to be handled by a session hash that is backed
by the browser and at no point does it hit the database -->

<!-- Adding a horizontal form in Ruby embedded code -->
<%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
	<!-- Username label and text field -->
	<div class="form-group">
		<div class="control-label col-sm-2">
			<%= f.label :email %>
		</div>
		<!-- text field -->
		<div class="col-sm-8">
			<%= f.email_field :email, class: "form-control", placeholder: "Enter email", autofocus: true %> 
		</div>
	</div>

	<!-- Password label -->
	<div class="form-group">
		<div class="control-label col-sm-2">
			<%= f.label :password %>
		</div>
		<!-- Email field -->
		<div class="col-sm-8">
			<%= f.password_field :password, class: "form-control", autocomplete: "off" %>
		</div>
	</div>

	<!-- Submit button -->
	<div class="form-group">
		<div class=" col-sm-offset-2 col-sm-10">
			<!-- @user.new_record? will change the new.html.erb button to Sign up and will change the edit.html.erb to Update account -->
			<%= f.submit "Log in", class: 'btn btn-primary btn-lg' %>
		</div>
	</div>
<% end %>

<div class="col-xs-4 col-xs-offset-4">
	[ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
</div>