<h1 align="center">Listing All Categories</h1>
<div align="center">
	<!-- Pagination. We have to update what we passing in in categories_controller.rb @categories = Category.paginate(page: params[:page], per_page: 5) -->
	<%= will_paginate %>
	<!-- Go through each category and list them -->
	<% @categories.each do |category| %>
		<ul class="listing">
			<div class="row">
				<div class="well col-md-4 col-md-offset-4">
					<li class="article-title">
						<%= link_to "#{category.name}", category_path(category) %>
					</li>
				</div>
			</div>
		</ul>
	<% end %>
	<!-- Pagination. We have to update what we passing in in categories_controller.rb @categories = Category.paginate(page: params[:page], per_page: 5) -->
	<%= will_paginate %> 
</div>