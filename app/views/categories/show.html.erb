<!-- List the articles associated with the selected category -->
<h1 align="center"><%= @category.name %></h1>
<!-- display the pagination -->
<div align="center">
	<!-- link to edit category -->
	<% if logged_in? and current_user.admin? %>
		<div class="row">
			<span class="badge"><%= link_to "Edit Category Name", edit_category_path(@category) %></span>
		</div>
	<% end %>
	<%= will_paginate @category_articles %>
</div>
<!-- Listing the articles -->
<%= render 'articles/article', obj: @category_articles %>
<!-- display the pagination at the bottom -->
<div align="center">
	<%= will_paginate @category_articles %>
</div>