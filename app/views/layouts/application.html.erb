<!DOCTYPE html>
<html>
  <head>
    <title>AlphaBlog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<!-- render the Navigation file -->
    <%= render 'layouts/navigation' %>
    <!-- calling the _messages.html.erb -->
    <%= render 'layouts/messages' %>
    <!-- Wrapper file - Any code included here will show on every view -->
    <!-- Inserting a containing into yield to make the home container not expend through the whole home page -->
    <div class="container">
      <%= yield %>
    </div>
    <!-- footer -->
    <%= render 'layouts/footer' %>
    <!-- display of debug params if Rails.env. is development?  -->
    <%= debug(params) if Rails.env.development? %>
  </body>
</html>
